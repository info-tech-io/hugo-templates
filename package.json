{
  "name": "hugo-templates",
  "version": "0.1.0-alpha.1",
  "description": "Parametrized build system for Hugo - the first Template Factory framework for static site generation",
  "main": "bin/hugo-templates.js",
  "bin": {
    "hugo-templates": "./bin/hugo-templates.js"
  },
  "scripts": {
    "test": "jest",
    "test:unit": "jest --selectProjects=unit",
    "test:integration": "jest --selectProjects=integration",
    "test:performance": "jest --selectProjects=performance",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "validate": "node scripts/validate.js",
    "build": "bash scripts/build.sh",
    "dev": "node scripts/dev.js",
    "prepublishOnly": "npm run test && npm run lint"
  },
  "keywords": [
    "hugo",
    "template",
    "scaffolding",
    "cli",
    "generator",
    "static-site",
    "education",
    "parametrized",
    "factory"
  ],
  "author": {
    "name": "info-tech-io",
    "url": "https://github.com/info-tech-io"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/info-tech-io/hugo-templates.git"
  },
  "bugs": {
    "url": "https://github.com/info-tech-io/hugo-templates/issues"
  },
  "homepage": "https://github.com/info-tech-io/hugo-templates#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "chalk": "^4.1.2",
    "commander": "^9.4.1",
    "fs-extra": "^11.1.1",
    "glob": "^8.1.0",
    "inquirer": "^8.2.5",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.1"
  },
  "files": [
    "bin/",
    "schemas/",
    "templates/",
    "themes/",
    "components/",
    "scripts/",
    "collection.json",
    "README.md",
    "LICENSE"
  ],
  "preferGlobal": true
}
