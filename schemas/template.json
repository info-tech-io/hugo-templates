{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.hugo-templates.org/template.json",
  "title": "Hugo Template Configuration Schema",
  "description": "Schema for defining Hugo templates in the factory framework",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Template name",
      "pattern": "^[a-z][a-z0-9-]*$"
    },
    "version": {
      "type": "string",
      "description": "Template version",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9-]+)?$"
    },
    "description": {
      "type": "string",
      "description": "Template description"
    },
    "author": {
      "type": "string",
      "description": "Template author"
    },
    "license": {
      "type": "string",
      "description": "Template license"
    },
    "keywords": {
      "type": "array",
      "description": "Template keywords",
      "items": {
        "type": "string"
      }
    },
    "extends": {
      "type": "string",
      "description": "Parent template to extend from"
    },
    "components": {
      "type": "object",
      "description": "Required and optional components",
      "properties": {
        "required": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "optional": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "excluded": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "hugo": {
      "type": "object",
      "description": "Hugo-specific configuration",
      "properties": {
        "minVersion": {
          "type": "string",
          "description": "Minimum Hugo version required"
        },
        "extended": {
          "type": "boolean",
          "description": "Requires Hugo Extended version"
        }
      }
    },
    "variables": {
      "type": "object",
      "description": "Template variables that can be customized",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["string", "boolean", "number", "array", "object"]
          },
          "description": {
            "type": "string"
          },
          "default": {},
          "required": {
            "type": "boolean",
            "default": false
          }
        },
        "required": ["type"]
      }
    }
  },
  "required": ["name", "version", "description"],
  "additionalProperties": false
}