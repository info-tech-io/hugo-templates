{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.hugo-templates.org/list.json",
  "title": "Hugo Templates List Schema",
  "description": "Schema for hugo-templates list command parameters",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "Type of items to list",
      "enum": ["templates", "themes", "components", "all"],
      "default": "all"
    },
    "format": {
      "type": "string",
      "description": "Output format",
      "enum": ["table", "json", "yaml", "plain"],
      "default": "table"
    },
    "verbose": {
      "type": "boolean",
      "description": "Show detailed information",
      "default": false
    }
  },
  "additionalProperties": false,
  "required": []
}